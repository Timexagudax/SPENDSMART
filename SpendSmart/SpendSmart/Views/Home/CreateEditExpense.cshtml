@model SpendSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or Edit Expense</h1>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home">
    <input type="hidden" asp-for="Id" />
     
    <div class="form-group">
        <label asp-for="UserId">Select a User:</label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users">
            <option value="0">-- Select User --</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
     
    <label class="mt-3">Value ₦</label>
    <input class="form-control" type="number" asp-for="Value" step="0.01" required />

    <label class="mt-3">Description</label>
    <input class="form-control" type="text" asp-for="Description" required />

    <label class="mt-3">Color</label>
    <input class="form-control" type="text" asp-for="Color" required />
    
    <label class="mt-3">Quantity</label>
    <input class="form-control" type="number" asp-for="Quantity" step="0.01" />

    <label class="mt-3">Size</label>
    <input class="form-control" type="text" asp-for="Size" required />

    <input type="hidden" asp-for="SerialNumber" />
    
    <div class="mt-3">
        <span>
            <button type="submit" class="btn btn-success">Save</button>
        </span>
        <span>
            <a asp-controller="Home" asp-action="Expenses" class="btn btn-primary">Expense List</a>
        </span>
    </div>
</form>
