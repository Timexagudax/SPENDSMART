@{
    ViewData["Title"] = "Expenses";
}
@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />
    <hr />
    <h3>Total expenses ₦@ViewBag.Expenses</h3>
    <br />

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Description</th>
                <th>User</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var expense in Model)
            {
                <tr>
                    <td>@expense.Id</td>
                    <td>₦@expense.Value.ToString("N2")</td>
                    <td>@expense.Description</td>

                    <!-- FIXED LINE -->
                    <td>@(expense.User?.Name ?? "No User")</td>

                    <td>
                        <a asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a> |
                        <a asp-action="DeleteExpense" asp-route-id="@expense.Id" onclick="return confirm('Are you sure you want to delete this expense?');">Delete</a> |
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@expense.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <br />
    <hr />
    <br />
    <a asp-controller="Home" asp-action="CreateEditExpense" class="btn btn-primary">Create Expense</a>
</div>