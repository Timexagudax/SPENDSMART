@model SpendSmart.Models.User

<div class="text-center">
    <h1 class="display-4">Create User</h1>
</div>

<form asp-action="Create" asp-controller="User">
  <div> class="mt-3"> 
      <label class="mt-3">Name</label>
        <input class="form-control" type="text" asp-for="Name" required />
        <span asp-validation-for="Name" class="text-danger"></span>
  </div>

    <div> class="mt-3"> 
      <label class="mt-3">Age</label>
        <input class="form-control" type="number" asp-for="Age" required />
        <span asp-validation-for="Age" class="text-danger"></span>
  </div>


    <div>
        class="mt-3">
        <label class="mt-3">Address</label>
        <input class="form-control" type="text" asp-for="Address" required />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div>
        class="mt-3">
        <label class="mt-3">profession</label>
        <input class="form-control" type="text" asp-for="profession" required />
        <span asp-validation-for="profession" class="text-danger"></span>
    </div>
    <br />
    <hr />
    <br>
    <div class="mt-3">
        <span>
            <button type="submit" class="btn btn-success">Create</button>
        </span>
        <span>
            <a asp-controller="User" asp-action="Index" class="btn btn-primary">User List</a>
        </span>
    </div>

</form>
